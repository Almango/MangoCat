---
import { Icon } from 'astro-icon/components';
import { SiteConfig } from '../config';

export interface Props {
  post: any;
  prevPost: any | null;
  nextPost: any | null;
}

const { post, prevPost, nextPost } = Astro.props;
---

<!-- 文章结尾信息块 -->
<div class="article-footer-card">
  <div class="article-footer-license">
    <div class="footer-info-item">

      <div class="info-content">
        <div class="info-label">许可协议</div>
        <div class="info-value">
          本文章采用 <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank">CC BY-NC-SA 4.0</a> 国际许可协议，转载请注明出处。
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 上下篇文章导航 -->
<div class="nav-container">
{nextPost && (
  <a href={`/posts/${nextPost.slug}`} class="nav-link prev-post">
    <h3><Icon name="material-symbols:chevron-left-rounded" />上一篇</h3>
    <span>{nextPost.data.title}</span>
  </a>
)}
{prevPost && (
  <a href={`/posts/${prevPost.slug}`} class="nav-link next-post">
    <h3>下一篇<Icon name="material-symbols:chevron-right-rounded" /></h3>
    <span>{prevPost.data.title}</span>
  </a>
)}
</div>

<style>
/* 文章结尾信息块样式 */
.article-footer-card {
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 5px 20px;
    margin: 30px 0;
    transition: all 0.3s ease;
}


.article-footer-license {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    max-width: 600px;
}

.footer-info-item {
    display: flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    height: 80px;
    padding: 10px 0;
}




.info-label {
    font-size: 16px;
    color: var(--title-color);
    font-weight: 600;
    margin-bottom: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.info-value {
    font-size: 14px;
    color: var(--text-color);
    line-height: 1.5;
    word-break: break-word;
}

.info-value a {
    color: var(--theme-color);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
}

.info-value a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--theme-color);
    transition: width 0.3s ease;
}


/* 响应式设计 */
@media (max-width: 768px) {
    .article-footer-card {
        padding: 20px;
    }
    
    .article-footer-grid {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .info-value {
        font-size: 13px;
    }
}

/* 文章导航样式 */
.nav-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 10px;
    width: 100%;
}

.nav-link {
    display: flex;
    flex-direction: column;
    padding: 15px 0;
    transition: all 0.3s ease;
    text-decoration: none;
}

.nav-link.prev-post {
    align-items: flex-start;
    margin-right: auto;
}

.nav-link.next-post {
    align-items: flex-end;
    margin-left: auto;
}

.nav-link h3 {
    font-size: 12px;
    color: var(--info-font-color);
    margin: 0 0 5px 0;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.nav-link.next-post h3 {
    justify-content: flex-end;
}

.nav-link h3 svg {
    width: 25px;
    height: 25px;
    color: var(--theme-color);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    vertical-align: middle;
}

.nav-link span {
    font-size: 16px;
    font-weight: 500;
    line-height: 1.5;
    color: var(--title-color);
    transition: color 0.3s ease;
    max-width: 70%;
    
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.nav-link.next-post span {
    text-align: right;
}

/* 悬停效果 */
.nav-link:hover span {
    color: var(--theme-color);
}

/* 响应式设计 */
@media (max-width: 768px) {
    .nav-container {
        flex-direction: column;
    }
    
    .nav-link {
        padding: 12px 0;
    }
    
    .nav-link.prev-post {
        align-items: flex-start;
        margin-right: auto;
    }
    
    .nav-link.next-post {
        align-items: flex-end;
        margin-left: auto;
    }
    
    .nav-link.next-post h3 {
        justify-content: flex-end;
    }
    
    .nav-link span {
        max-width: 100%;
    }
    
    .nav-link.next-post span {
        text-align: right;
    }
}
</style>