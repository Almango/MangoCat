---
import { siteConfig } from '../config';

---
<div class="footer-container">
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-info">
                <p class="powered-by">Powered by <a style="color: var(--theme-color);" href="https://astro.build/" target="_blank">Astro</a> & <a style="color: var(--theme-color);" href="https://github.com/Almango/MangoCat" target="_blank"> MangoCat {siteConfig.version}</a></p>
                <p class="copyright">&copy; {new Date().getFullYear()} <span style="font-weight: bold;">{siteConfig.author}</span></p>
            </div>
            <div class="footer-right">
                <div class="footer-links">
                    <a href="#" class="footer-link">GitHub</a>
                    <a href="#" class="footer-link">Twitter</a>
                    <a href="#" class="footer-link">RSS</a>
                </div>
                <div class="icp-info">
                    <a href="https://beian.miit.gov.cn/" target="_blank">京ICP备XXXXXXXXX号</a>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    .footer-container {
        margin: 0 auto;
        padding: 0;
        box-sizing: border-box;
    }

    .footer {
        background-color: var(--header-footer-bg-color);
        padding: 15px 20px;
        margin: 0 auto;
        box-shadow: 0 -1px 3px var(--shadow-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: var(--text-color);
        border-top: none;
    }

    .footer-content {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .footer-info {
        font-size: 0.9em;
        opacity: 0.8;
    }

    .footer-info {
        display: flex;
        flex-direction: column;
        gap: 0rem;
    }

    .powered-by {
        font-size: 1em;
        font-weight: bold;
        margin: 0;
    }
    .copyright {
        font-size: 1em;
        opacity: 0.8;
        margin: 0;
    }
    .footer-right {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
    }

    .footer-links {
        display: flex;
        gap: 20px;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .icp-info {
        font-size: 0.8em;
        opacity: 0.7;
    }

    .icp-info a {
        color: var(--text-color);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .icp-info a:hover {
        color: #007bff;
    }

    .footer-link {
        text-decoration: none;
        color: #555;
        font-size: 15px;
        transition: color 0.3s ease;
    }

    .footer-link:hover {
        color: #007bff;
    }

    @media (max-width: 768px) {
        .footer {
            padding: 12px 20px;
        }

        .footer-content {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

        .footer-right {
            align-items: center;
        }

        .footer-links {
            gap: 15px;
        }

        .footer-link {
            font-size: 14px;
        }
    }
</style>