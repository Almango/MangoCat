---
import { SiteConfig, DEVELOPER_CONFIG } from '../config';

---
<footer class="footer">
    <div class="footer-content">
        <!-- 技术支持区域 -->
        <div class="footer-section powered-section">
            <p class="powered-by">
                Powered by <a href="https://astro.build/" target="_blank">Astro</a> & <a href="https://github.com/Almango/MangoCat" target="_blank">MangoCat {DEVELOPER_CONFIG.THEME_VERSION}</a>
            </p>
        </div>


        <!-- 版权信息区域 -->
        <div class="footer-section copyright-section">
            <div class="copyright">
                <span class="copyright-left"><span style="font-weight: bold;">&copy;</span> {new Date().getFullYear()} <span style="font-weight: bold;">{SiteConfig.author}</span> 保留权利.</span>
                <span class="copyright-right">政策</span>
            </div>
        </div>

        <!-- 备案信息区域 -->
        <div class="footer-section icp-section">
            <div class="icp-info">
                <a href="https://icp.gov.moe/?keyword=20240146" target="_blank">萌ICP备20240146号</a>
            </div>
        </div>
    </div>
</footer>

<style>
    @media (max-width: 768px) {
        .footer {
            padding: 0 20px;
        }
    }
    .footer {
        color: var(--text-color);
        padding: 20px 0 10px;
        border-top: 2px dashed var(--info-font-color);
        width: 90%;
        margin: 0 auto;
        max-width: 700px;
    }

    .footer-content {
        gap: 10px;
        align-items: center;
        /* margin: 0 auto */
    }

    .powered-by {
        font-size: 1em;
        margin: 0;
        padding-bottom: 2px;

    }
    
    .copyright {
        font-size: 0.8em;
        margin: 0;
        display: flex;
        justify-content: space-between;
        width: 100%;
        color: var(--text-color);
        padding-bottom: 2px;
    }

    .icp-info {
        font-size: 0.8em;
    }

    a {
        color: var(--text-color);
        text-decoration: none;
        transition: color 0.3s ease;
        font-weight: 500;
    }

    a:hover {
        color: var(--theme-color);
    }

</style>