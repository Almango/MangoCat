---
import { SiteConfig, DEVELOPER_CONFIG } from "../config";
import { Icon } from "astro-icon/components";
---

<footer class="footer">
    <div class="footer-container">

        
        <!-- 主要信息区 -->
        <div class="footer-info">
            <!-- 版权信息 -->
            <div class="copyright">
                <span style="font-weight: bold; font-size: 1.1em;">&copy;</span>
                {new Date().getFullYear()} {SiteConfig.author}
            </div>
            
            <!-- 技术支持 -->
            <div class="powered">
                Powered by <a href="https://astro.build/" target="_blank">Astro</a> &
                <a href="https://github.com/Almango/MangoCat" target="_blank">MangoCat</a>
                <span class="version">v{DEVELOPER_CONFIG.THEME_VERSION}</span>
            </div>
            
            <!-- 备案信息 -->
            <div class="icp">
                <a href="https://icp.gov.moe/?keyword=20240146" target="_blank">萌ICP备20240146号</a>
            </div>
            <div class="rss">
                <a href={SiteConfig.siteUrl + "/rss.xml"} target="_blank">
                    RSS订阅
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        border-top: 1px solid var(--border-color);
        color: var(--footer-color);
        padding: 2rem 0;
        margin-top: 4rem;
    }
    
    .footer-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 0 1.5rem;
        text-align: center;
    }
    
    .footer-info {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    
    /* 统一footer-info内所有元素的字体样式（a标签除外） */
    .footer-info > div,
    .footer-info > span,
    .footer-info .version {
        font-family: 'AlimamaFangYuanTi', 'Satoshi', system-ui, sans-serif;
        font-size: 0.875rem;
        font-weight: 400;
        color: var(--footer-color);
        opacity: 0.8;
        margin: 0;
        letter-spacing: 0.01em;
        line-height: 1.5;
    }
    
    .footer-info .separator {
        opacity: 0.5;
    }
    
    a {
        font-family: 'AlimamaFangYuanTi', 'Satoshi', system-ui, sans-serif;
        color: var(--footer-color);
        text-decoration: none;
        transition: all 0.2s ease;
        font-weight: 500;
    }
    
    a:hover {
        color: var(--theme-color);
        opacity: 1;
    }
    
    /* 响应式字体调整 */
    @media (max-width: 768px) {
        .copyright, .powered, .icp {
            font-size: 0.8125rem;
            letter-spacing: 0.01em;
        }
        
        .separator {
            font-size: 0.8125rem;
        }
        
        .version {
            font-size: 0.7rem;
        }
    }
    
    /* 响应式设计 */
    @media (max-width: 768px) {
        .footer {
            padding: 1.5rem 0;
            margin-top: 3rem;
        }
        
        .footer-container {
            padding: 0 1rem;
        }
        
        .social-icons {
            gap: 0.75rem;
            margin-bottom: 1.25rem;
        }
        
        .social-icon {
            width: 2rem;
            height: 2rem;
        }
        
        .social-icon svg {
            width: 1.125rem;
            height: 1.125rem;
        }
        
        .footer-info {
            gap: 0.5rem;
        }
        
        .copyright, .powered, .icp {
            font-size: 0.8125rem;
        }
    }
</style>
