---
import { SiteConfig } from '../config.ts';
import Layout from '../layouts/Layout.astro';
import { Icon } from "astro-icon/components";
import Comment from '../components/Comment.astro';
import LinkPage  from '../content/link.md';
// 从集中存储的友链数据文件导入links数组
import { links } from '../data/links.ts';

---

<Layout pagetitle={`友链 - ${SiteConfig.title}`}>
  <div class="links-container">
    <h1 class="text-3xl font-bold" style="color: var(--title-color);">友链</h1>
    <p class="links-subtitle">与各位博主无限进步</p>
    
    <div class="links-grid">
      {links.map((link, index) => (
        <div class="link-card animate-slide-in" style={{ animationDelay: `${index * 0.05}s` }} data-key={link.name}>
          <a href={link.url} target="_blank" rel="noopener noreferrer" class="link-card-inner">
            <div class="link-avatar-container">
              <img src={link.avatar} alt={link.name} class="link-avatar" />
            </div>
            <div class="link-info">
              <div class="link-header">
                <h3 class="link-name">{link.name}</h3>
                <Icon name="mdi:external-link" class="link-icon" />
              </div>
              <p class="link-description">{link.description}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
    <LinkPage />
    <!-- 评论区 -->
    <Comment />
  </div>
</Layout>

<style>
  .links-container {
    max-width: var(--width);
    margin: 0 auto;
  }
  
  .links-subtitle {
    font-size: 1rem;
    color: var(--text-color);
    margin-bottom: 25px;
  }
  
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 10px;
    margin-bottom: 40px;
  }
  
  .link-card {
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    
  }
  
  .link-card:hover {
    border-color: var(--theme-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-color);
  }
  
  .link-card-inner {
    display: flex;
    align-items: center;
    padding: 10px;
    text-decoration: none;
    color: var(--text-color);
    gap: 10px;
  }
  
  .link-avatar-container {
    flex-shrink: 0;
  }
  
  .link-avatar {
    width: 44px;
    height: 44px;
    border-radius: 8px;
    object-fit: cover;
    border: 1px solid var(--border-color);
  }
  
  .link-info {
    flex: 1;
    min-width: 0;
  }
  
  .link-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2px;
  }
  
  .link-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--title-color);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .link-icon {
    width: 13px;
    height: 13px;
    color: var(--text-color);
    opacity: 0.6;
  }
  
  .link-description {
    font-size: 0.8rem;
    color: var(--text-color);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    
  }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .links-grid {
      grid-template-columns: 1fr;
      gap: 10px;
    }
    
    .link-card-inner {
      padding: 12px;
      gap: 12px;
    }
    
    .link-avatar {
      width: 50px;
      height: 50px;
    }
    
    .link-name {
      font-size: 0.9rem;
    }
    
    .link-description {
      font-size: 0.8rem;
    }
  }
</style>