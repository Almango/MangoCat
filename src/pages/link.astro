<style>
  .links-container {
    max-width: var(--width);
    margin: 0 auto;
  }
  
  .links-subtitle {
    font-size: 1rem;
    color: var(--text-color);
    margin-bottom: 30px;
  }
  
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
    margin-bottom: 40px;
  }
  
  .link-card {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .link-card:hover {
    border-color: var(--theme-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-color);
  }
  
  .link-card-inner {
    display: flex;
    align-items: center;
    padding: 12px;
    text-decoration: none;
    color: var(--text-color);
    gap: 12px;
  }
  
  .link-avatar-container {
    flex-shrink: 0;
  }
  
  .link-avatar {
    width: 56px;
    height: 56px;
    border-radius: 8px;
    object-fit: cover;
    border: 1px solid var(--border-color);
  }
  
  .link-info {
    flex: 1;
    min-width: 0;
  }
  
  .link-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6px;
  }
  
  .link-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--title-color);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .link-icon {
    width: 14px;
    height: 14px;
    color: var(--text-color);
    opacity: 0.6;
  }
  
  .link-description {
    font-size: 0.85rem;
    color: var(--text-color);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  /* å“åº”å¼è®¾è®¡ */
  @media (max-width: 768px) {
    .links-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
    
    .link-card-inner {
      padding: 12px;
      gap: 12px;
    }
    
    .link-avatar {
      width: 56px;
      height: 56px;
    }
    
    .link-name {
      font-size: 1rem;
    }
    
    .link-description {
      font-size: 0.85rem;
    }
  }
</style>